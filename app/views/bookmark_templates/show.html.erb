<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Bookmark #<%= @bookmark.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/bookmarks" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @bookmark.user %>
          <a href="/bookmarks/<%= @bookmark.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit bookmark
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @bookmark.user %>
          <a href="/delete_bookmark/<%= @bookmark.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete bookmark
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <% if @bookmark.user.present? %>
          <a href="/users/<%= @bookmark.user_id %>">
            <%= @bookmark.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Movie
      </dt>
      <dd>
        <% if @bookmark.movie.present? %>
          <a href="/movies/<%= @bookmark.movie_id %>">
            <%= @bookmark.movie.title %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@bookmark.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@bookmark.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

