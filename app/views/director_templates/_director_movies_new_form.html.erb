<form action="/create_movie_from_director" method="post">

  <div class="form-group">
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @movie.title %>">
  </div>

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control" value="<%= @movie.description %>">
  </div>

  <div class="form-group">
    <label for="year">
      Year
    </label>

    <input type="text" id="year" name="year" class="form-control" value="<%= @movie.year %>">
  </div>

  <input type="hidden" name="director_id" value="<%= @director.id %>">

  <button class="btn btn-block btn-outline-secondary">
    Create movie
  </button>
</form>
