<h1>
  Edit role #<%= @role.id %>
</h1>

<hr>

<form action="/update_role/<%= @role.id %>" method="post">

  <div class="form-group">
    <label for="movie_id">
      Movie
    </label>

    <%= select_tag(:movie_id, options_from_collection_for_select(Movie.all, :id, :title, @role.movie_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="actor_id">
      Actor
    </label>

    <%= select_tag(:actor_id, options_from_collection_for_select(Actor.all, :id, :name, @role.actor_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="charactername">
      Charactername
    </label>

    <input type="text" id="charactername" name="charactername" class="form-control" value="<%= @role.charactername %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update role
  </button>
</form>

<hr>

<a href="/roles">
  Go back
</a>
