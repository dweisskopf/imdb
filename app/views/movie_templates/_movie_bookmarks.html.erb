<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Bookmarks

    <a data-toggle="collapse" href="#movie_bookmarks_new_form">
      Add bookmark
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @movie.bookmarks.each do |bookmark| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <a href="/bookmarks/<%= bookmark.id %>">
          <%= bookmark.user_id %>
        </a>

        <%if current_user == bookmark.user %>
          <a href="/delete_bookmark_from_movie/<%= bookmark.id %>">
            Delete
          </a>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="movie_bookmarks_new_form">
        <%= render partial: "movie_templates/movie_bookmarks_new_form" %>
      </div>
    </div>

  </ul>
</div>
